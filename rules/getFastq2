SRR=["SRR628582", "SRR628583", "SRR628584", "SRR628585", "SRR628586", "SRR628587", "SRR628588"]

rule all:
	input:
		expand("{sample}.fastq", sample=SRR)

rule prefetch:
	output:
		"{sample]/{sample}.sra"
	shell:
		"""
		prefetch {wildcards.sample} > {output}
		"""

rule fasterqdump:
	input:
		"{sample}/{sample}.sra"
	output:
		"{sample}.fastq"
	shell:
		"""
		fasterq-dump {input} --split-spot --skip-technical
		"""
